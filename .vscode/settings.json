{
    "eslint.enable": true,
    "eslint.validate": [
        "javascript",
        "typescript",
        "vue"
    ],
    "eslint.workingDirectories": [
        "./frontend"
    ],
    "eslint.format.enable": true,
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [
        "--config-file=${workspaceFolder}/backend/pyproject.toml"
    ],
    "python.testing.cwd": "${workspaceFolder}/backend",
    "python.testing.pytestPath": "${workspaceFolder}/backend/.venv/bin/pytest",
    "python.testing.unittestEnabled": false,
    "python.terminal.activateEnvInCurrentTerminal": true,
    "python.useEnvironmentsExtension": false,
    "python.terminal.activateEnvironment": true,
    "python.languageServer": "None",
    "python.defaultInterpreterPath": "${workspaceFolder}/backend/.venv/bin/python",
    "[shellscript]": {
        "editor.defaultFormatter": "foxundermoon.shell-format",
        "editor.formatOnSave": true
    },
    "shellcheck.enable": true,
    "shellcheck.executablePath": "/usr/bin/shellcheck",
    "shellcheck.run": "onSave",
    "shellcheck.customArgs": [
        "--shell=bash",
        "--color=never",
        "--external-sources"
    ],
    "shellformat.path": "/usr/bin/shfmt",
    "shellformat.flag": "-i 4 -s -ci -w",
    "sqlfluff.dialect": "postgres",
    "terminal.integrated.env.linux": {
        "PYTHONPATH": "./backend/src"
    },
    "typescript.tsdk": "./frontend/node_modules/typescript/lib",
    "typescript.enablePromptUseWorkspaceTsdk": true,
    "typescript.format.placeOpenBraceOnNewLineForFunctions": true,
    "vitest.rootConfig": "./frontend/vitest.config.ts",
    "ruff.configuration": "${workspaceFolder}/backend/pyproject.toml",
    "ruff.importStrategy": "fromEnvironment",
    "ruff.configurationPreference": "filesystemFirst",
    "ruff.interpreter": [
        "${workspaceFolder}/backend/.venv/bin/python"
    ],
    "ruff.path": [
        "${workspaceFolder}/backend/.venv/bin/ruff"
    ],
    "ty.importStrategy": "fromEnvironment",
    "ty.diagnosticMode": "openFilesOnly",
    "ty.disableLanguageServices": false,
    "ty.interpreter": [
        "${workspaceFolder}/backend/.venv/bin/python"
    ],
    "ty.path": [
        "${workspaceFolder}/backend/.venv/bin/ty"
    ],
    "ty.configuration": {
        "environment": {
            "root": [
                "backend/src",
                "backend/tests"
            ]
        }
    },
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
        }
    },
    "cSpell.words": [
        "notabool"
    ]
}
